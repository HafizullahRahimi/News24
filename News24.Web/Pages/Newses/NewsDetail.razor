@using News24.Business.Services.NewsDetail
@using News24.DTOs.Newses
@using System.Globalization
@inject INewsDetailService NewsDetailService

@page "/newses/{Id:int}"

@if (NewsDto != null)
{
    <div class="single_post">
        <div class="container-fluid">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-8">
                        <div class="post_img">
                            <img src="/images/@NewsDto.ImageName" alt="">
                        </div>
                    </div>
                    <div class="col-md-2"></div>
                </div>
                <div class="posts_meta text-center">
                    <span><i class="fa fa-comment-o"></i> 25 نظر</span>
                    <span><i class="fa fa-archive"></i> اقتصادی</span>
                    <span><i class="fa fa-calendar"></i> @NewsDto.CreateDate</span>
                </div>
                <div class="post_content">
                    <h4>| عنوان مطلب در این قسمت</h4>
                    <p>@NewsDto.ShortDescription</p>
                    <img src="/images/@NewsDto.ImageName" alt="">
                    <div>
                        @((MarkupString) NewsDto.Description)
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int? Id { get; set; }

    public DisplayNewsDTO? NewsDto { get; set; }

    protected override async Task OnInitializedAsync()
    {
        NewsDto = await NewsDetailService.GetNewsById(Id.Value);
    }

}